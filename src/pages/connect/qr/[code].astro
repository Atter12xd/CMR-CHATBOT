---
// Página móvil para escanear QR y conectar WhatsApp
import Layout from '../../../layouts/Layout.astro';

// Esta página debe renderizarse en el servidor (SSR) porque el código viene como parámetro
export const prerender = false;

const { code } = Astro.params;

if (!code) {
  return Astro.redirect('/');
}
---

<Layout title="Conectar WhatsApp">
  <main class="min-h-screen bg-gradient-to-b from-blue-50 to-white flex items-center justify-center p-4">
    <div class="max-w-md w-full bg-white rounded-2xl shadow-xl p-6 space-y-6">
      <!-- Logo/Header -->
      <div class="text-center">
        <div class="w-16 h-16 bg-green-500 rounded-full flex items-center justify-center mx-auto mb-4">
          <span class="text-white font-bold text-2xl">W</span>
        </div>
        <h1 class="text-2xl font-bold text-gray-900 mb-2">Conectar WhatsApp</h1>
        <p class="text-gray-600">Vincula tu cuenta de WhatsApp Business</p>
      </div>

      <!-- Información -->
      <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
        <p class="text-sm text-blue-900 text-center">
          Al conectar, podrás gestionar tus mensajes de WhatsApp desde tu dashboard
        </p>
      </div>

      <!-- Formulario para ingresar número de WhatsApp -->
      <div id="connect-container" class="space-y-4">
        <!-- Paso 1: Ingresar número -->
        <div id="phone-form" class="space-y-4">
          <div>
            <label for="phone-input" class="block text-sm font-medium text-gray-700 mb-2">
              Tu número de WhatsApp Business
            </label>
            <input
              type="tel"
              id="phone-input"
              placeholder="+51987654321"
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent"
              autocomplete="tel"
            />
            <p class="mt-1 text-xs text-gray-500">Ingresa el número que quieres conectar (formato internacional con código de país)</p>
          </div>
          <button
            id="connect-btn"
            class="w-full bg-green-600 hover:bg-green-700 text-white font-semibold py-3 px-6 rounded-lg transition-colors flex items-center justify-center space-x-2"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z" />
            </svg>
            <span>Conectar mi número</span>
          </button>
        </div>

        <!-- Loading -->
        <div id="loading" class="hidden text-center">
          <div class="inline-block w-12 h-12 border-4 border-green-600 border-t-transparent rounded-full animate-spin mb-4"></div>
          <p id="loading-message" class="text-sm text-gray-600">Procesando...</p>
        </div>

        <!-- Error -->
        <div id="error" class="hidden bg-red-50 border border-red-200 rounded-lg p-4">
          <p id="error-message" class="text-sm text-red-700 text-center"></p>
        </div>

        <!-- Success -->
        <div id="success" class="hidden bg-green-50 border border-green-200 rounded-lg p-4 text-center">
          <div class="flex items-center justify-center mb-2">
            <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
          </div>
          <p class="text-sm font-semibold text-green-900 mb-1">¡WhatsApp conectado exitosamente!</p>
          <p class="text-xs text-green-700">Redirigiendo al dashboard...</p>
        </div>
      </div>

      <!-- Instrucciones -->
      <div class="text-center text-xs text-gray-500 space-y-2">
        <p>Ingresa el número de WhatsApp Business que deseas conectar</p>
        <p>Cada organización puede conectar su propio número individual</p>
      </div>
    </div>
  </main>
</Layout>

<script define:vars={{ code }}>
  const phoneForm = document.getElementById('phone-form');
  const phoneInput = document.getElementById('phone-input') as HTMLInputElement;
  const connectBtn = document.getElementById('connect-btn');
  const loading = document.getElementById('loading');
  const loadingMessage = document.getElementById('loading-message');
  const errorDiv = document.getElementById('error');
  const errorMessage = document.getElementById('error-message');
  const successDiv = document.getElementById('success');
  const connectContainer = document.getElementById('connect-container');
  
  let organizationId: string | null = null;

  // Verificar código QR al cargar
  async function verifyQRCode() {
    try {
      loading?.classList.remove('hidden');
      loadingMessage.textContent = 'Verificando código QR...';
      errorDiv?.classList.add('hidden');
      phoneForm?.classList.add('hidden');

      const response = await fetch('/api/qr/verify', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({ code }),
      });

      const data = await response.json();

      if (!response.ok || !data.success) {
        throw new Error(data.error || 'Error al verificar código QR');
      }

      organizationId = data.organizationId;
      
      loading?.classList.add('hidden');
      phoneForm?.classList.remove('hidden');
    } catch (err: any) {
      console.error('Error verificando QR:', err);
      loading?.classList.add('hidden');
      errorDiv?.classList.remove('hidden');
      errorMessage.textContent = err.message || 'Error al verificar código QR. Por favor intenta nuevamente.';
    }
  }

  // Conectar número específico de la organización
  async function connectPhoneNumber() {
    const phoneNumber = phoneInput?.value.trim();
    
    if (!phoneNumber) {
      showError('Por favor ingresa un número de teléfono');
      return;
    }

    // Validar formato de número
    const phoneRegex = /^\+[1-9]\d{1,14}$/;
    if (!phoneRegex.test(phoneNumber)) {
      showError('Formato inválido. Usa formato internacional: +51987654321');
      return;
    }

    if (!organizationId) {
      showError('Error: No se pudo identificar la organización');
      return;
    }

    try {
      loading?.classList.remove('hidden');
      loadingMessage.textContent = 'Buscando y conectando tu número de WhatsApp...';
      errorDiv?.classList.add('hidden');
      phoneForm?.classList.add('hidden');

      // Conectar número específico - sistema busca/registra el número en Meta y obtiene su phone_number_id único
      const connectResponse = await fetch('/api/qr/connect', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({ 
          code,
          organizationId,
          phoneNumber // Número específico de esta organización
        }),
      });

      const connectData = await connectResponse.json();

      if (!connectResponse.ok || !connectData.success) {
        throw new Error(connectData.error || 'Error al conectar WhatsApp');
      }

      // Éxito - mostrar mensaje y redirigir
      loading?.classList.add('hidden');
      connectContainer?.classList.add('hidden');
      successDiv?.classList.remove('hidden');

      // Redirigir al dashboard después de 2 segundos
      setTimeout(() => {
        window.location.href = '/configuracion?success=true&connected=true';
      }, 2000);
    } catch (err: any) {
      console.error('Error conectando:', err);
      loading?.classList.add('hidden');
      phoneForm?.classList.remove('hidden');
      showError(err.message || 'Error al conectar WhatsApp. Por favor intenta nuevamente.');
    }
  }

  function showError(message: string) {
    errorDiv?.classList.remove('hidden');
    errorMessage.textContent = message;
  }

  // Event listeners
  connectBtn?.addEventListener('click', connectPhoneNumber);
  phoneInput?.addEventListener('keypress', (e) => {
    if (e.key === 'Enter') {
      connectPhoneNumber();
    }
  });

  // Iniciar verificación al cargar
  verifyQRCode();
</script>

<style>
  @keyframes spin {
    to {
      transform: rotate(360deg);
    }
  }
  
  .animate-spin {
    animation: spin 1s linear infinite;
  }
</style>
