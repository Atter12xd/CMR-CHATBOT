---
// P√°gina m√≥vil para escanear QR y conectar WhatsApp
import Layout from '../../../layouts/Layout.astro';

// Esta p√°gina debe renderizarse en el servidor (SSR) porque el c√≥digo viene como par√°metro
export const prerender = false;

const { code } = Astro.params;

if (!code) {
  return Astro.redirect('/');
}
---

<Layout title="Conectar WhatsApp">
  <main class="min-h-screen bg-gradient-to-b from-blue-50 to-white flex items-center justify-center p-4">
    <div class="max-w-md w-full bg-white rounded-2xl shadow-xl p-6 space-y-6">
      <!-- Logo/Header -->
      <div class="text-center">
        <div class="w-16 h-16 bg-green-500 rounded-full flex items-center justify-center mx-auto mb-4">
          <span class="text-white font-bold text-2xl">W</span>
        </div>
        <h1 class="text-2xl font-bold text-gray-900 mb-2">Conectar WhatsApp</h1>
        <p class="text-gray-600">Vincula tu cuenta de WhatsApp Business</p>
      </div>

      <!-- Informaci√≥n -->
      <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
        <p class="text-sm text-blue-900 text-center">
          Al conectar, podr√°s gestionar tus mensajes de WhatsApp desde tu dashboard
        </p>
      </div>

      <!-- Estado de conexi√≥n autom√°tica (el n√∫mero ya viene en el QR) -->
      <div id="connect-container" class="space-y-4">
        <div id="auto-connect" class="text-center py-8">
          <div class="inline-block w-16 h-16 border-4 border-green-600 border-t-transparent rounded-full animate-spin mb-4"></div>
          <h2 class="text-xl font-semibold text-gray-900 mb-2">Conectando WhatsApp...</h2>
          <p class="text-sm text-gray-600">Por favor espera, no cierres esta ventana</p>
        </div>

        <!-- Loading -->
        <div id="loading" class="hidden text-center">
          <div class="inline-block w-12 h-12 border-4 border-green-600 border-t-transparent rounded-full animate-spin mb-4"></div>
          <p id="loading-message" class="text-sm text-gray-600">Procesando...</p>
        </div>

        <!-- Error -->
        <div id="error" class="hidden bg-red-50 border border-red-200 rounded-lg p-4">
          <p id="error-message" class="text-sm text-red-700 text-center"></p>
        </div>

        <!-- Success -->
        <div id="success" class="hidden bg-green-50 border border-green-200 rounded-lg p-4 text-center">
          <div class="flex items-center justify-center mb-2">
            <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
          </div>
          <p class="text-sm font-semibold text-green-900 mb-1">¬°WhatsApp conectado exitosamente!</p>
          <p class="text-xs text-green-700">Redirigiendo al dashboard...</p>
        </div>
      </div>

      <!-- Instrucciones -->
      <div class="text-center text-xs text-gray-500 space-y-2">
        <p>Conectando autom√°ticamente tu n√∫mero de WhatsApp...</p>
        <p>No necesitas hacer nada m√°s, solo espera a que se complete la conexi√≥n</p>
      </div>
    </div>
  </main>
</Layout>

<script define:vars={{ code }}>
  const autoConnect = document.getElementById('auto-connect');
  const errorDiv = document.getElementById('error');
  const errorMessage = document.getElementById('error-message');
  const successDiv = document.getElementById('success');

  // Conectar autom√°ticamente al escanear QR (el n√∫mero ya viene en el QR)
  async function connectAutomatically() {
    try {
      console.log('üöÄ Iniciando conexi√≥n autom√°tica con c√≥digo:', code);
      
      // 1. Verificar c√≥digo QR y obtener organizationId y phoneNumber del metadata
      console.log('üìã Verificando c√≥digo QR...');
      const verifyResponse = await fetch('/api/qr/verify', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({ code }),
      });

      const verifyData = await verifyResponse.json();
      console.log('üìã Respuesta de verificaci√≥n:', verifyData);

      if (!verifyResponse.ok || !verifyData.success) {
        throw new Error(verifyData.error || 'Error al verificar c√≥digo QR');
      }

      const organizationId = verifyData.organizationId;
      const phoneNumber = verifyData.phoneNumber; // El n√∫mero ya viene del QR

      if (!phoneNumber) {
        throw new Error('El c√≥digo QR no contiene un n√∫mero de tel√©fono. Por favor genera un nuevo QR.');
      }

      console.log('‚úÖ QR verificado. Conectando:', { organizationId, phoneNumber });

      // 2. Conectar autom√°ticamente con el n√∫mero del QR
      console.log('üîó Conectando n√∫mero...');
      const connectResponse = await fetch('/api/qr/connect', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({ 
          code,
          organizationId,
          phoneNumber
        }),
      });

      const connectData = await connectResponse.json();
      console.log('üîó Respuesta de conexi√≥n:', connectData);

      if (!connectResponse.ok || !connectData.success) {
        throw new Error(connectData.error || 'Error al conectar WhatsApp');
      }

      // 3. √âxito - mostrar mensaje y cerrar/redirigir r√°pidamente
      console.log('‚úÖ Conexi√≥n exitosa!');
      autoConnect?.classList.add('hidden');
      successDiv?.classList.remove('hidden');

      // Cerrar ventana inmediatamente o redirigir
      setTimeout(() => {
        try {
          // Intentar cerrar si se abri√≥ desde QR
          window.close();
        } catch (e) {
          // Si no se puede cerrar, redirigir
          window.location.href = '/configuracion?success=true&connected=true';
        }
      }, 500);
    } catch (err: any) {
      console.error('‚ùå Error conectando:', err);
      autoConnect?.classList.add('hidden');
      errorDiv?.classList.remove('hidden');
      errorMessage.textContent = err.message || 'Error al conectar WhatsApp. Por favor intenta nuevamente.';
    }
  }

  // Iniciar conexi√≥n autom√°ticamente al cargar
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', connectAutomatically);
  } else {
    connectAutomatically();
  }
</script>

<style>
  @keyframes spin {
    to {
      transform: rotate(360deg);
    }
  }
  
  .animate-spin {
    animation: spin 1s linear infinite;
  }
</style>
