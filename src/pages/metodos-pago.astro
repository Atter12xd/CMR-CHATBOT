    <PaymentMethodsConfig 
      client:only="react"
      methods={defaultPaymentMethods}
      onSave={(methods) => {
        // Aquí se guardaría en la base de datos
        console.log('Guardando métodos de pago:', methods);
        // Por ahora solo mostramos un mensaje
        alert('Métodos de pago guardados (en producción se guardaría en BD)');
      }}
    />
  </AppLayout>
</Layout>


